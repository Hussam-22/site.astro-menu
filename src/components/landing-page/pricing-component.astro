---
import PricingCard from '@components/landing-page/pricing-card.astro'
import Button from '@components/ui/button.astro'

const pricing = [
	{
		name: 'Free Plan',
		price: 'Free',
		popular: false,
		features: [
			'1 QR Codes(Link)',
			'1 Location',
			'5 Meals/items',
			'2 Translation Languages',
			'Unlimited Menus',
			'xKitchen Dashboard',
			'xWaiter/ess Dashboard (PoS)',
			'xAnalytics Dashboard (PoS)'
		],
		button: {
			text: 'Get Started',
			link: '/'
		},
		icon: 'coffeecup',
		description:
			'Ideal for small businesses like cafes or coffee shops with up to 15 tables. This plan offers basic digital menu features to streamline your operations and enhance customer experience.'
	},
	{
		name: 'Social Hero',
		price: '29 AED',
		popular: false,
		features: [
			'1 QR Codes(Link)',
			'1 Location',
			'20 Meals/items',
			'2 Translation Languages',
			'Unlimited Menus',
			'xKitchen Dashboard',
			'xWaiter/ess Dashboard (PoS)',
			'xAnalytics Dashboard (PoS)'
		],
		button: {
			text: 'Get Started',
			link: '/'
		},
		icon: 'dinesmart',
		description:
			'Designed for medium-sized restaurants with a capacity of up to 30 tables. The Growth Package provides additional customization options and analytics tools to help you optimize your menu and better understand your customers preferences.'
	},
	{
		name: 'Foodify',
		price: '99 AED',
		popular: true,
		features: [
			'1 QR Codes(Link)',
			'1 Location',
			'100 Meals',
			'5 Translation Languages',
			'Unlimited Menus',
			'Unlimited Scans*',
			'Analytics Dashboard',
			'xKitchen Dashboard (PoS)',
			'xWaiter/ess Dashboard (PoS)'
		],
		button: {
			text: 'Get Started',
			link: '/'
		},
		icon: 'foodify',
		description:
			'Designed for upscale restaurants and fine dining establishments with a capacity of up to 40 tables per branch, providing a galaxy of features to delight both chefs and patrons'
	},
	{
		name: 'Menu Master',
		price: '199 AED',
		popular: false,
		features: [
			'50 QR Codes(Link)',
			'1 Locations',
			'Unlimited Meals',
			'5 Translation Languages',
			'Unlimited Menus',
			'Unlimited Scans*',
			'Analytics Dashboard',
			'Kitchen Dashboard (PoS)',
			'Waiter/ess Dashboard (PoS)'
		],
		button: {
			text: 'Get Started',
			link: '/'
		},
		icon: 'menumaster',
		description:
			'An elite package for restaurant chains and franchises with a capacity of up to 50 tables per branch, offering a constellation of tools to manage multiple locations with ease and precision.'
	}
]
---

<div class="intersect-once mt-36 text-center intersect:animate-fade-right">
	<h2 class="text-4xl font-bold lg:text-5xl lg:tracking-tight">
		A Package for every business size
	</h2>
	<p class="mt-4 text-lg">
		<span class="text-rose-400">Astro Menu</span> offers a variety of packages that covers all business
		sizes, starting from a small cafe with 15 tables to a franchise of 5 branches.
	</p>
</div>

<div class="mx-auto mt-12 grid gap-5 sm:grid-cols-2 lg:grid-cols-4">
	{pricing.map((item, index) => <PricingCard plan={item} index={index} />)}
</div>

<p class="mt-1 text-sm">
	*Unlimited scans are subject to fair usage policy. For more information, please refer to our terms
	of service.
</p>

<div
	class="mt-10 flex flex-col items-center gap-4 rounded-lg bg-gray-100 p-5 text-center sm:flex-row sm:p-10 sm:text-left"
>
	<p class="text-bold flex-grow text-xl font-bold">
		Need a customized plan for your business, contact us and our sales team will get in touch with
		you shortly
	</p>
	<Button class="whitespace-nowrap">Contact Sales</Button>
</div>
