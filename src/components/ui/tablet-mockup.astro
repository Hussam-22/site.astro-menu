---
import { Image } from 'astro:assets'

const { className, imgSrc, text } = Astro.props
---

<div class={className}>
	<div class:list={['relative h-[450px] w-full  rounded-3xl bg-black p-2']}>
		<div class="absolute -top-1 h-2 w-12 rounded-xl bg-black" style="left:50px;"></div>
		<div class="absolute -top-1 h-2 w-12 rounded-xl bg-black" style="left:150px;"></div>
		<div class="absolute -top-1 h-2 w-12 rounded-xl bg-black" style="left:210px;"></div>
		<div class="absolute left-0 right-0 top-3 z-50 ml-auto mr-auto h-4 w-4 rounded-full bg-black">
		</div>
		<div class="h-full rounded-3xl">
			<Image
				src={imgSrc}
				class="h-full w-full rounded-3xl object-cover"
				alt={text || 'device mockup'}
				loading="lazy"
			/>
		</div>
	</div>
	{text && <h2 class="mt-2 text-center font-bold">{text}</h2>}
</div>
